@using App.Domain.Core.HomeService.Dtos
@model List<OrderDto>
<h3> لیست سفارشات انجام شده</h3>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>شماره سفارش</th>
            <th>تاریخ ثبت</th>
            <th>نام سرویس</th>
            <th>نام مشتری</th>
            <th>قیمت پایه</th>
            <th>آدرس</th>
            <th>زمان درخواست</th>
            <th>اعمالات</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt</td>
                <td>@order.ServiceName</td>
                <td>@order.CustomerUserName</td>
                <td>@order.ServiceBasePrice</td>
                <td>@order.SerivceAddress</td>
                <td>@order.ServiceDate</td>
                @if (@order.StatusId == 1 || @order.StatusId == 2)
                {
                    <td>
                        <a asp-controller="Order" asp-action="ExpertBid" asp-route-orderId="@order.Id" class="btn btn-primary">ارسال پیشنهاد</a>
                    </td>
                }
                else if(@order.StatusId == 6)
                {
                    <td>
                        <a asp-controller="Order" asp-action="Comment" asp-route-orderId="@order.Id" asp-route-serviceId="@order.ServiceId"  class="btn btn-primary">ارسال نظر</a>
                    </td>
                }
            </tr>

        }
    </tbody>
</table>