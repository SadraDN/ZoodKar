@using App.EndPoints.UI.Models.Account
@model LoginViewModel


@{
    ViewData["Title"] = "ورود";
}

<div class="m-0 p-0">
    <form asp-controller="Account" asp-action="Login" method="post">
    
        <h4>ورود به حساب کاربری</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserName" ></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <div class="form-check p-2 m-2">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            <label class="form-check-label mr-4"  asp-for="RememberMe">
            </label>
            <span asp-validation-for="RememberMe" class="text-danger"></span>

        </div>

        <input asp-route-ReturnUrl=@ViewBag.ReturnUrl  type="submit" class="btn btn-primary" value="ورود" />
    </form>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}
