@using App.Domain.Core.HomeService.Dtos
@model ServiceDto
<form method="post" asp-controller="Service" asp-action="Create" enctype="multipart/form-data">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">اضافه کردن سرویس</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                 <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="ShortDescription"></label>
                    </div>
                    <div class="col-8">
                        <input type="text" asp-for="ShortDescription" class="form-control" />
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label for="image">عکس سرویس</label>
                    </div>
                    <div class="col-8">
                        <input type="file" id="image" class="form-control" name="serviceFile"  multiple />
                    </div>
                </div>

                <div class="form-group row p-3">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CategoryId" class="dropdown-item" asp-items="@ViewBag.Categories">
                            <option disabled selected>انتخاب دسته بندی</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group">
                    <div class="d-inline-flex justify-content-around">
                        <button type="submit"  class="btn btn-primary mx-1">ثبت </button>
                        <div>
                            <a asp-controller="Service" asp-action="Index"  class="btn btn-success">بازگشت</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    <script>

                $(function() {
            $(".select-chosen").chosen({rtl: true});
        });

    </script>
}

}
