@using App.Domain.Core.HomeService.Dtos
@model List<ServiceCommentDto>

<h3>لیست سفارشات</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>تاریخ ساخت</th>
            <th>نام مشتری</th>
            <th>سرویس</th>
            <th>شماره سفارش</th>
            <th>نظر مشتری</th>
            <th>اعمالات</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt</td>
                <td>@order.CreatedUserId</td>
                <td>@order.ServiceId</td>
                <td>@order.OrderId</td>
                <td>@order.CommentText</td>
                <td>
                    <a asp-controller="ServiceComment" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>